<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <ImageView
        android:id="@+id/reply_img"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_alignBottom="@+id/name_txt"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_reply_line" />

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/reply_img"
        android:text="name"
        android:textColor="@color/reviewSecondTxtColor"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/name_txt"
        android:layout_toRightOf="@id/name_txt"
        android:text="message"
        android:textColor="@color/reviewSecondTxtColor"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/reply_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_txt"
        android:textColor="@color/timeColor"
        android:layout_marginTop="6dp"
        android:layout_marginRight="12dp"
        android:text="댓글달기"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_txt"
        android:textColor="@color/timeColor"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/reply_txt"
        android:text="time"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/time_txt"
        android:layout_marginTop="12dp"
        android:background="@color/rowColor" />
</RelativeLayout>