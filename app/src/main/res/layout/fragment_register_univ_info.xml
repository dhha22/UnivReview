<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/univInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:text="@string/register_univ_info"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/universityTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/univInfo"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:hint="대학교"
        android:padding="8dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/gray"
        android:textSize="18dp" />

    <View
        android:id="@+id/universityLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/universityTxt"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@color/gray" />


    <TextView
        android:id="@+id/majorTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/universityLine"
        android:layout_gravity="center"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:gravity="center"
        android:hint="전공"
        android:padding="8dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/gray"
        android:textSize="18dp" />

    <View
        android:id="@+id/majorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/majorTxt"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@color/gray" />


    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_next_btn_selector"
        android:padding="18dp"
        android:text="대학리뷰 시작하기"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>